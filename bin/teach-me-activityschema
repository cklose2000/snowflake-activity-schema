echo -e "${GREEN}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo ""
echo "When do people use Claude most? What patterns emerge?"
echo ""

run_query "SELECT * FROM CLAUDE_LOGS.ACTIVITIES.V_PATTERN_DISCOVERY LIMIT 10;" \
    "Analyze when Claude is used most:"

# Interactive Challenge
clear
echo -e "${PURPLE}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo -e "${PURPLE}              ğŸ† Your Turn: Challenges ğŸ†               ${NC}"
