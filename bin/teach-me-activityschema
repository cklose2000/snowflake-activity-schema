RED='\033[0;31m'
NC='\033[0m'

clear

cat << "EOF"
    _         _   _       _ _        ____       _                          
   / \   ____| |_(_)_   _(_) |_ _   |  _ \ ___| |_ ___ _ __ _ __  ___ 
  / _ \ / ___|  _| \ \ / / | __| | | | |_) / _ \ __/ _ \ '__| '_ \/ __|
 / ___ \ (__| |_| |\ V /| | |_| |_| |  __/  __/ ||  __/ |  | | | \__ \
/_/   \_\___|\__|_| \_/ |_|\__|\__, |_|   \___|\__\___|_|  |_| |_|___/
                                |___/  Learning System v1.0
EOF

echo ""
echo -e "${PURPLE}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
